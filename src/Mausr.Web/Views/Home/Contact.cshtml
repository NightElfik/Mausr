@model ContactModel
@{
	ViewBag.Title = "Contact";
}
<h1>@ViewBag.Title</h1>

<div class="row">
	<div class="col-md-6">
		@if (ViewBag.Message != null) {
			<p>@ViewBag.Message</p>
		}
		@if (Model != null) {
			using (Html.BeginForm()) {
				@Html.AntiForgeryToken()

				<div class="form-horizontal">
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					<hr />
					<div class="form-group">
						@Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-4" })
						<div class="col-md-8">
							@Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "control-label col-md-4" })
						<div class="col-md-8">
							@Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.Subject, htmlAttributes: new { @class = "control-label col-md-4" })
						<div class="col-md-8">
							@Html.EditorFor(m => m.Subject, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.Message, htmlAttributes: new { @class = "control-label col-md-4" })
						<div class="col-md-8">
							@Html.EditorFor(m => m.Message, new { htmlAttributes = new { @class = "form-control", rows = 5 } })
							@Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
						</div>
					</div>

					<div class="form-group">
						@Model.Captcha.Html()
					</div>

					<div class="form-group">
						<div class="col-md-offset-3 col-md-6">
							<input type="submit" value="Send" class="btn btn-primary btn-lg btn-block" />
						</div>
					</div>
				</div>
			}

		}
	</div>
</div>
