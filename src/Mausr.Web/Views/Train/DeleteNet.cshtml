@model string
@{
	ViewBag.Title = "Delete network";
}

<h1>@ViewBag.Title</h1>

<p>
	Do you really want to delete network <code>@Model</code>
</p>

<div class="row">
	@using (Html.BeginForm()) {
		@Html.AntiForgeryToken()


		<div class="form-group">
			<div class="col-md-offset-3 col-md-3">
				<input type="submit" value="Yes, delete it!" class="btn btn-danger btn-lg btn-block" />
			</div>
			<div class="col-md-3">
				@Html.ActionLink("Cancel", MVC.Train.Index(), new { @class = "btn btn-default btn-lg btn-block" })
			</div>
		</div>

	}

</div>

