@model LearnInitViewModel

@{
	ViewBag.Title = "Learning initialization";
}

<h1>@ViewBag.Title</h1>


@using (Html.BeginForm()) {
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<div class="form-group">
			<label class="col-sm-3 control-label">Total symbols count</label>
			<div class="col-md-3">
				<p class="form-control-static">@Model.Symbols.Count</p>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-3 control-label">Symbols</label>
			<div class="col-md-9">
				<p class="form-control-static">@string.Join(", ", Model.Symbols.Select(x => x.SymbolStr))</p>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Start learning batch" class="btn btn-primary btn-lg" />
			</div>
		</div>
	</div>
}