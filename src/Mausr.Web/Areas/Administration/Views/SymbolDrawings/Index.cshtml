@model IPagination<IGrouping<Symbol, SymbolDrawing>>

@{
	ViewBag.Title = "Symbol drawings";
	int imageSize = 128;
	int penSize = 4;
	var pagination = Model.Html();
}

<h1>@ViewBag.Title</h1>

@pagination

@foreach (var group in Model) {
	<div class="row">
		<hr />
		<h4>@group.Key.SymbolStr: @group.Key.Name</h4>
		@foreach (var item in group) {
			<div class="pull-left">
				<img src="@Url.Action(MVC.SymbolDrawings.Img(item.SymbolDrawingId, imageSize, penSize, 0, false, true))"
					 width="@imageSize" height="@imageSize" />
				<p class="small">@item.CreatedDateTime.ToString(System.Globalization.CultureInfo.InvariantCulture)</p>
				<p class="small">Drawn using @(item.DrawnUsingTouch ? "touch" : "mouse")</p>
				@Html.ActionLink("Delete", "Delete", new { id = item.SymbolDrawingId })
			</div>
		}
	</div>
}

@pagination
